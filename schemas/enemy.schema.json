{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flavorverse.example.com/schemas/enemy.schema.json",
  "title": "Flavorverse Enemy",
  "description": "Schema for enemy entities in the Flavorverse",
  "type": "object",
  "required": ["id", "name", "hp", "trait", "ai"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique enemy identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the enemy",
      "minLength": 1,
      "maxLength": 50
    },
    "hp": {
      "type": "integer",
      "description": "Base hit points",
      "minimum": 1,
      "maximum": 999
    },
    "maxHp": {
      "type": "integer",
      "description": "Maximum hit points (defaults to hp if not specified)",
      "minimum": 1
    },
    "trait": {
      "type": "string",
      "description": "Enemy archetype/trait",
      "enum": ["Condiment", "Entropy", "Dessert", "Critic", "Spice", "Umami", "Elite", "Boss"]
    },
    "threat": {
      "type": "string",
      "description": "Threat level indicator",
      "enum": ["Low", "Medium", "High", "Special", "Elite", "Boss"]
    },
    "ai": {
      "type": "string",
      "description": "AI behavior pattern",
      "enum": ["slow-debuff", "drain", "heal-buff", "multi-attack", "defensive", "aggressive", "random"]
    },
    "actions": {
      "type": "array",
      "description": "Available enemy actions",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["attack", "debuff", "buff", "heal", "summon"]
          },
          "damage": {
            "type": "integer"
          },
          "statusEffect": {
            "type": "string"
          },
          "weight": {
            "type": "number",
            "description": "Probability weight for action selection",
            "minimum": 0
          }
        }
      }
    },
    "resistances": {
      "type": "object",
      "description": "Damage resistances",
      "properties": {
        "Burn": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "Physical": {
          "type": "number"
        }
      }
    },
    "vulnerabilities": {
      "type": "array",
      "description": "Damage vulnerabilities",
      "items": {
        "type": "string"
      }
    },
    "rewards": {
      "type": "object",
      "description": "Rewards for defeating enemy",
      "properties": {
        "cards": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "relics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "lore": {
      "type": "string",
      "description": "Enemy background/flavor text",
      "maxLength": 500
    }
  }
}
