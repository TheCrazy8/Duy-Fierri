{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flavorverse.example.com/schemas/status.schema.json",
  "title": "Flavorverse Status Effect",
  "description": "Schema for status effects in the Flavorverse",
  "type": "object",
  "required": ["id", "name", "category", "tickPhase"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "enum": ["buff", "debuff", "neutral"]
    },
    "tickPhase": {
      "type": "string",
      "enum": ["startTurn", "endTurn", "passive", "onDamage"]
    },
    "icon": {
      "type": "string",
      "maxLength": 4
    },
    "stacks": {
      "type": "integer",
      "minimum": 0,
      "default": 1
    },
    "duration": {
      "type": "integer",
      "minimum": -1,
      "description": "-1 for permanent, 0+ for temporary"
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["damage", "heal", "statBoost", "statReduction", "energyDrain", "damageReduction"]
          },
          "amount": {
            "oneOf": [
              {"type": "integer"},
              {"type": "string", "enum": ["stacks"]}
            ]
          },
          "target": {
            "type": "string",
            "enum": ["holder", "enemy", "all"]
          }
        }
      }
    }
  }
}
